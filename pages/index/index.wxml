    <view class='pro-like'>
      <image class='pro-like-image' src="/images/icon/chat.png" />
      <text class='pro-like-font'>98</text>
      <image class='pro-like-image' src="/images/icon/view.png" />
      <text class='pro-like-font'>112</text>
    </view>
  </view>
</view>