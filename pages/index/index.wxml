<!-- 轮播区域  -->
<swiper class='banner' indicator-dots="true" autoplay="true"  interval="4500" duration="500" >
  <block wx:for="{{imgList}}" wx:key="unique">
    <swiper-item>
        <image src="{{item}}" class="slider-image"/>
    </swiper-item>
  </block>
</swiper>


<!-- 产品区域  -->
<view class='proList'>
  <!-- 产品 item  -->
  <view class="pro-item">
    <view class="pro-author-date">
      <image class='pro-author' src='/images/avatar/1.png' />
      <text class='pro-date'>Sep 18 2016</text>
    </view>
    <text class='pro-title'>正是虾肥螃蟹壮时</text>
    <image class='pro-showimg' src="/images/post/crab.png" />
