<template name="list-item">

  <!-- 产品 item  -->
  <view class="pro-item">
    <view class="pro-author-date">
      <image class='pro-author' src='{{ avatar }}' />
      <text class='pro-date'>{{ date }}</text>
    </view>
    <text class='pro-title'>{{ title }}</text>
    <image class='pro-showimg' src="{{ headImgSrc }}" />
    <text class='pro-content'>{{ content }}</text>
    <view class='pro-like'>
      <image class='pro-like-image' src="/images/icon/chat.png" />
      <text class='pro-like-font'>{{ collection }}</text>
      <image class='pro-like-image' src="/images/icon/view.png" />
      <text class='pro-like-font'>{{ reading }}</text>
    </view>
  </view>

</template>